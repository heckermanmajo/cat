{
  "name": "catknows",
  "version": "0.1.0-beta",
  "description": "CatKnows - Skool Community Analyzer",
  "main": "main.js",
  "author": "CatKnows",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.catknows.app",
    "productName": "CatKnows",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "loading.html",
      "error.html",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "python/",
        "to": "python/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "mac": {
      "target": "zip",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
